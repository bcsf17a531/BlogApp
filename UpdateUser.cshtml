@model BlogApp.Models.Users


<html>

<head>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>


<body style=" background-image: url('../../images/back.jpg');">
    <center>
        <div class="text-center border border-dark w-50 p-3">
            <h1 style="color: #0000A0;"> Update </h1>


            <form method="post"  asp-controller="User" asp-action="Update">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="container-fluid w-50">
                    <label class="col-form-label" style="color:whitesmoke" asp-for="RegisterUsername"></label><br>
                    <input class="form-control" asp-for="RegisterUsername"><br>
                    <span asp-validation-for="RegisterUsername"></span>
                </div>

                <div class="container-fluid w-50">
                    <label class="col-form-label" style="color:whitesmoke" asp-for="RegisterEmail"></label><br>
                    <input class="form-control" asp-for="RegisterEmail"><br>
                    <span asp-validation-for="RegisterEmail"></span>
                </div>

                <div class="container-fluid w-50">
                    <label class="col-form-label" style="color:whitesmoke" asp-for="RegisterPassword"></label><br>
                    <input class="form-control" asp-for="RegisterPassword"><br>
                    <span asp-validation-for="RegisterPassword"></span>
                </div>

                <div class="container-fluid w-50">
                    <label class="col-form-label" style="color:whitesmoke" asp-for="ConfirmPassword"></label><br>
                    <input class="form-control" asp-for="ConfirmPassword"><br>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>

                <div class="container-fluid w-50">
                    <label class="col-form-label" style="color:whitesmoke" asp-for="ProfileImage"></label><br>
                    <input class="form-control" asp-for="ProfileImage"><br>
                    <span asp-validation-for="ProfileImage"></span>

                </div>

                <button class="btn btn-primary" type="submit">Update!</button>
            </form>




        </div>
    </center>


</body>







</html>